@model Plato

<div class='content'>
    <div class='wrap'>
        <h1>Bienvenido a CRUDelicioso!!</h1>
        <div class='add'>
            <a class="nav-link text-dark home" asp-area="" asp-controller="Home" asp-action="Index">Inicio</a>
            <a class="nav-link new" asp-area="" asp-controller="Home" asp-action="Create">Agregar Plato</a>
        </div>
    </div>
    <div class='formulario'>
        @{
            foreach (var x in @ViewBag.elPlato)
            {
                Console.WriteLine(x.Descripcion);
                <h1>Editar: @x.Nombre</h1>
                <form asp-action="Update" asp-controller="Home" method="post">
                    
                    <div class="part1">
                        <span asp-validation-for="Chef"></span>
                        <label asp-for="Chef">Nombre del Chef: </label>
                        <input asp-for="Chef" value="@x.Chef">

                        <span asp-validation-for="Nombre"></span>
                        <label asp-for="Nombre">Nombre del Plato: </label>
                        <input asp-for="Nombre" value="@x.Nombre">

                        <span asp-validation-for="Calorias"></span>
                        <label asp-for="Calorias"># de Calorias: </label>
                        <input asp-for="Calorias" value="@x.Calorias">
                    </div>
                    <div class='part2'>
                        <span asp-validation-for="Sabor"></span>
                        <label asp-for="Sabor">Sabor: </label>
                        <select asp-for="Sabor">
                            <option value="@x.Sabor">@x.Sabor</option>
                            <option value="1">1</option>
                            <option value="2">2</option>
                            <option value="3">3</option>
                            <option value="4">4</option>
                            <option value="5">5</option>
                        </select>
                    </div>
                    <div class='part3'>
                        <p>Descripcion: <br><strong> @x.Descripcion</strong></p>
                        <textarea asp-for="Descripcion" rows="4" placeholder="Agregar Nueva Descripcion">@x.Descripcion</textarea><br>
                        <input class="btn btn-primary" type="submit" value="Agregar">
                    </div>
                </form>
            }
        }
    </div>
</div>